<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="2"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:clickable="true"
        android:layout_gravity="left"
        android:src="@drawable/home" >
    </ImageView>

    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/shopping" >
    </ImageView>
    <ImageView
        android:id="@+id/library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginRight="50dp"
        android:layout_gravity="right"
        android:src="@drawable/library_books" >
    </ImageView>
    <TextView
        android:id="@+id/home_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="left"
        android:textColor="@color/colorTextbottomTool"
        android:text="En kiosque"/>
    <TextView
        android:id="@+id/shopping_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorTextbottomTool"
        android:text="Mes journaux"/>

    <TextView
        android:id="@+id/library_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/colorTextbottomTool"
        android:layout_gravity="right"
        android:text="Mes documents"/>

</GridLayout>
