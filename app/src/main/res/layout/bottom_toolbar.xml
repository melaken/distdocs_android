<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="2"
    android:orientation="horizontal"
    android:verticalSpacing="50dp">


    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_gravity="center_horizontal"
        android:focusable="true"
        android:src="@drawable/home" >
    </ImageView>
    <ImageView
        android:id="@+id/library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/library_books" >
    </ImageView>
    <ImageView
        android:id="@+id/subscriptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/subscriptions" >
    </ImageView>
    <TextView
        android:id="@+id/home_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="En kiosque"/>
    <TextView
        android:id="@+id/library_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="Mes documents"/>
    <TextView
            android:id="@+id/subscriptions_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="Abonnements"/>
</GridLayout>
